{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "centreon",
  "id": "centreon-datasource",
  "metrics": true,
  "info": {
    "description": "",
    "author": {
      "name": "Centreon",
      "url": "https://centreon.com"
    },
    "keywords": ["centreon"],
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "links": [
      {
        "name": "Website",
        "url": "https://github.com/grafana/grafana-starter-datasource"
      },
      {
        "name": "License",
        "url": "https://github.com/grafana/grafana-starter-datasource/blob/master/LICENSE"
      }
    ],
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": ">=7.0.0",
    "plugins": []
  },
  "routes": [
    {
      "path": "centreon-login",
      "url": "{{ .JsonData.centreonURL }}/api/latest/login",
      "body": {
        "security": {
          "credentials": {
            "login": "{{ .JsonData.username }}",
            "password": "{{ .SecureJsonData.password }}"
          }
        }
      }
    },
    {
      "path": "centreon",
      "url": "{{ .JsonData.centreonURL }}/api/latest"
    }
  ]
}
